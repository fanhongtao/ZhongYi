<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<xs:element name="中药">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="名称">
					<xs:complexType>
						<xs:attribute name="hz" type="xs:string" use="required" />
						<xs:attribute name="py" type="xs:string" use="required" />
					</xs:complexType>
				</xs:element>
				<xs:element name="介绍" type="html" />
				<xs:element name="药性">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="气味" type="xs:string" />
							<xs:element name="归经" type="xs:string" />
							<xs:element name="毒性" type="xs:string" minOccurs="0" />
						</xs:sequence>
					</xs:complexType>
				</xs:element>
				<xs:element name="功效" type="html" />
				<xs:element name="应用">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="para" maxOccurs="unbounded" >
								<xs:complexType>
									<xs:sequence>
										<xs:element name="title" type="xs:string" minOccurs="0" />
										<xs:element name="text" type="html" />
									</xs:sequence>
								</xs:complexType>
							</xs:element>
						</xs:sequence>
					</xs:complexType>
				</xs:element>
				<xs:element name="用法用量" type="html" />
				<xs:element name="使用注意" type="html" minOccurs="0" />
				<xs:element name="鉴别用药" minOccurs="0" maxOccurs="unbounded" >
					<xs:complexType mixed="true">
						<xs:sequence>
							<xs:element name="鉴药" type="xs:string" minOccurs="2" maxOccurs="unbounded" />
						</xs:sequence>
					</xs:complexType>
				</xs:element>
				<xs:element name="其他" type="html" minOccurs="0" />
				<xs:element name="附药" type="xs:string" minOccurs="0" maxOccurs="unbounded" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	
	<xs:complexType name="html" mixed="true">
		<xs:sequence>
			<xs:choice minOccurs="0" maxOccurs="unbounded">
				<xs:element name="a" type="xs:string"/>
				<xs:element name="br" />
				<xs:element name="sub" type="xs:string"/>
			</xs:choice>
		</xs:sequence>
	</xs:complexType>
</xs:schema>
